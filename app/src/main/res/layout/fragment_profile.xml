<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/jojo"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/profile_pro" />

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_5"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="340dp"/>

        <TextView
            android:id="@+id/jojotext"
            android:layout_toRightOf="@id/jojo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="10sp"
            android:text="Jotaro Kujo"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jojotext"
            android:layout_marginStart="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:layout_toRightOf="@id/jojo"
            android:text="JojoDio"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10sp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="5sp"
            android:scaleY="0.65"
            android:scaleX="0.65"
            android:src="@drawable/user" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="3sp"
            android:textColor="#7C7979"
            android:textSize="15sp"
            android:text="7 following"/>
    </LinearLayout>
    <RelativeLayout
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:radius="8dp"
            android:shape="rectangle">

<!--            <ImageView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="20sp"-->
<!--                android:layout_marginTop="10sp"-->
<!--                android:layout_marginRight="10sp"-->
<!--                android:layout_marginBottom="10sp"-->
<!--                android:background="#2C2828"-->
<!--                android:padding="5sp"-->
<!--                android:src="@drawable/repository" />-->

            <Button
                android:id="@+id/btn_repositories_profiles"
                android:drawableLeft="@drawable/btn_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="start|center_vertical"
                android:paddingTop="10dp"
                android:text="   Repositories"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_below="@id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:radius="8dp"
            android:shape="rectangle">

            <Button
                android:id="@+id/btn_starred"
                android:drawableLeft="@drawable/btn_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="start|center_vertical"
                android:paddingTop="10dp"
                android:text="   Strarred"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:radius="8dp"
            android:shape="rectangle">

            <Button
                android:id="@+id/btn_organizations"
                android:drawableLeft="@drawable/btn_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="start|center_vertical"
                android:paddingTop="10dp"
                android:text="   Organization"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10sp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5sp"
            android:scaleY="0.65"
            android:scaleX="0.65"
            android:src="@drawable/star_black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:textColor="#7C7979"
            android:textSize="15sp"
            android:text="Popular"/>
    </LinearLayout>
    <include layout="@layout/fragment_profile1"></include>

</LinearLayout>